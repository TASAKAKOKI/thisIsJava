<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/">
	<padding>
		<Insets topRightBottomLeft="20"/>
	</padding>
	
	<center>
		<GridPane fx:id="gridPane" hgap="10" vgap="10">
			<!-- 4개 Label, 4개 TextField 배치 -->
			<Label text="이름" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="50"/>
			<Label text="국어" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="50"/>
			<Label text="수학" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="50"/>
			<Label text="영어" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="50"/>

			<TextField GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100"/>
			<TextField GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100"/>
			<TextField GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100"/>
			<TextField GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="100"/>
		</GridPane>
	</center>
	<bottom>
		<HBox alignment="CENTER" spacing="20">
			<BorderPane.margin>
				<Insets top="10" bottom="10"/>
			</BorderPane.margin>
			
			<children>
				<Button text="저장"/>
				<Button fx:id="btnFormCancel" text="취소"/>
			</children>
		</HBox>
	</bottom>
</BorderPane>